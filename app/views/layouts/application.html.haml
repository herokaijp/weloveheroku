!!! 5
%html(lang="ja")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : t('site_info.title')
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = javascript_include_tag 'https://d3dy5gmtp8yhk7.cloudfront.net/2.0/pusher.min.js'
    = stylesheet_link_tag "application", :media => "all", 'data-turbolinks-track' => true
    %link(href="favicon.ico" rel="shortcut icon")


  %body{ class: yield(:body_class), data: {group_id: yield(:group_id)} }
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href= '/')
            = t('site_info.title')
          %ul.menu.nav.pull-right
          .container-fluid.nav-collapse

    .container-fluid

      .row-fluid
        - if content_for?(:sidebar)
          .span2
            = bootstrap_flash
            = yield(:sidebar)
          .span10
            = yield
        - else
          .span12
            = bootstrap_flash
            = yield

    %footer
      %p
        Copyright &copy;
        = Time.current.year
        @iwhurtafly &amp; @ppworks
        All Rights Reserved.
